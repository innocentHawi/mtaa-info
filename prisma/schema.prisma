generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Faq {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  createdAt DateTime @default(now())
}

model MessageLog {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  source    String   // "faq" | "ai" | "fallback"
  createdAt DateTime @default(now())
}
